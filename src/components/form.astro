<form action="#" class="contact__form">
  <fieldset>
    <legend class="h3">Contact Me</legend>
    <div class="form-group">
      <label for="name">Your name</label>
      <input
        type="text"
        name="name"
        id="name"
        placeholder="Type here..."
        required
      />
    </div>
    <div class="form-group">
      <label for="email">Your email</label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="email@address.com"
        required
      />
    </div>
    <div class="form-group">
      <label for="email">Your message</label>
      <textarea
        name="message"
        id="message"
        cols="10"
        rows="5"
        placeholder="Type your message here..."
        required></textarea>
    </div>
    <button type="submit" class="button-small contact__btn">SEND IT</button>
  </fieldset>
</form>
<style>
  .contact__form {
    flex: 1;
    max-width: 500px;
    width: 100%;
    padding: 1.5em;
    border-radius: 0.5em;
    border: var(--border);
  }

  .contact__form legend {
    text-align: center;
    margin-bottom: var(--clamp-2-base);
  }

  .contact__form fieldset {
    display: grid;
    gap: var(--clamp-base);
    border: none;
  }

  .form-group {
    display: grid;
  }

  .form-group label {
    font-size: var(--size-base);
    font-weight: var(--fw-light);
  }

  .form-group input,
  textarea {
    font-size: var(--text-size);
    font-weight: var(--fw-light);
    color: inherit;
    background-color: transparent;
    border: none;
    border-bottom: var(--border);
    padding: var(--size-x-small);
  }

  .contact__btn {
    margin-inline: auto;
    background-color: var(--accent-color);
  }

  .contact__media {
    max-width: 17rem;
    width: 100%;
  }

  .contact__link {
    font-size: var(--text-size);
    font-weight: var(--fw-light);
  }

  /* 600px  */
  @media (max-width: 37.5em) {
    .contact__content {
      text-align: center;
      margin-inline: auto;
    }

    .contact__media,
    .contact__form {
      margin-inline: auto;
    }

    .contact__form {
      padding-inline: 1em;
    }
  }
</style>
